# ============================================================
# NETWORK CONFIGURATION
# ============================================================

# Private key for deployment (DO NOT commit your actual private key!)
# Generate: openssl rand -hex 32
PRIVATE_KEY=your_private_key_here

# Sepolia Testnet RPC URL
# Get from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Zama Devnet RPC URL (for FHE encryption)
ZAMA_RPC_URL=https://devnet.zama.ai

# Alternative RPC providers (uncomment to use)
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ============================================================
# API KEYS
# ============================================================

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key (for gas price in USD)
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Codecov token (for coverage reporting in CI)
# Get from: https://codecov.io
CODECOV_TOKEN=your_codecov_token_here

# ============================================================
# GAS & PERFORMANCE OPTIMIZATION
# ============================================================

# Enable gas reporting (true/false)
REPORT_GAS=false

# Gas report output file (leave empty for console output)
REPORT_GAS_FILE=

# Enable contract size reporting
CONTRACT_SIZER=false

# Gas limit for transactions
GAS_LIMIT=8000000

# Gas price (in gwei)
GAS_PRICE=20

# ============================================================
# SECURITY CONFIGURATION
# ============================================================

# Admin address for contract ownership
ADMIN_ADDRESS=

# Pauser address (can pause contract in emergency)
PAUSER_ADDRESS=

# Multi-sig wallet addresses (comma-separated)
MULTISIG_OWNERS=

# Required confirmations for multi-sig
MULTISIG_THRESHOLD=2

# Rate limiting - max transactions per address per block
RATE_LIMIT_PER_BLOCK=5

# Max consultation fee (in wei)
MAX_CONSULTATION_FEE=10000000000000000

# Min consultation fee (in wei)
MIN_CONSULTATION_FEE=1000000000000000

# Emergency pause enabled
EMERGENCY_PAUSE_ENABLED=true

# ============================================================
# DoS PROTECTION
# ============================================================

# Maximum gas per transaction
MAX_GAS_PER_TX=500000

# Maximum iterations in loops
MAX_LOOP_ITERATIONS=100

# Rate limit window (in seconds)
RATE_LIMIT_WINDOW=60

# Maximum pending consultations per client
MAX_PENDING_CONSULTATIONS=10

# ============================================================
# DEVELOPMENT & TESTING
# ============================================================

# Enable debug logging
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Test network chain ID
TEST_CHAIN_ID=31337

# Fork from mainnet for testing
FORK_MAINNET=false

# Mainnet fork block number
FORK_BLOCK_NUMBER=

# ============================================================
# CI/CD CONFIGURATION
# ============================================================

# Run tests in CI mode
CI=false

# Skip long-running tests
SKIP_SLOW_TESTS=false

# Coverage threshold (percentage)
COVERAGE_THRESHOLD=80

# Fail on coverage below threshold
FAIL_ON_LOW_COVERAGE=true

# ============================================================
# MONITORING & ALERTING
# ============================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics endpoint
METRICS_ENABLED=false

# Alert webhook URL
ALERT_WEBHOOK_URL=

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================

# API endpoint
API_URL=http://localhost:3000

# WebSocket endpoint
WS_URL=ws://localhost:3000

# Enable analytics
ANALYTICS_ENABLED=false

# Analytics tracking ID
ANALYTICS_ID=

# ============================================================
# INSTRUCTIONS
# ============================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Replace placeholder values with your actual credentials
#
# 3. NEVER commit your .env file to version control
#
# 4. Keep this .env.example file updated with new variables
#
# 5. For production, use environment-specific files:
#    - .env.development
#    - .env.staging
#    - .env.production
#
# ============================================================
# SECURITY WARNINGS
# ============================================================
#
# ⚠️  NEVER commit private keys or API keys
# ⚠️  Use different keys for development and production
# ⚠️  Rotate keys regularly
# ⚠️  Use hardware wallets for production deployments
# ⚠️  Enable 2FA on all API key providers
# ⚠️  Monitor API key usage for suspicious activity
#
# ============================================================
